{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@test/i18n": ["libs/i18n/src/index.ts"],
      "@test/home": ["apps/home/src/module.ts"],
      "@test/alpha": ["apps/alpha/src/module.ts"],
      "@test/beta": ["apps/beta/src/module.ts"],
      "@test/common": ["libs/common/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
